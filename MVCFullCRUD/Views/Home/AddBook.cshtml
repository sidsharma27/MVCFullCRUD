@model MVCFullCRUD.Model.Book
@{
    ViewBag.Title = "AddBook";
}

<h2>Add Book</h2>
<form method="post">
    @Html.LabelFor(x => x.Title)
    <br />
    @Html.TextAreaFor(x => x.Title)
    <br />
    @Html.LabelFor(x => x.Author)
    </br>
    @Html.TextBoxFor(x => x.Author)
    <br />
    @Html.LabelFor(x => x.Genre)
    <br />
    @Html.EnumDropDownListFor(x => x.Genre)
    <br />
    <button type="submit" class="btn btn-default">Add a book</button>
</form>
